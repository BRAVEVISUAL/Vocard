<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFAE5">

    <android.widget.Button
        android:id="@+id/backMain"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/solid_button"
        android:fontFamily="@font/font"
        android:text="뒤로 가기"
        android:textAllCaps="false"
        android:textColor="#FFF9E1"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded" />

    <!-- 이미지뷰 중앙 상단 -->


    <!-- 영단어와 스피커 아이콘 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_border"
        android:padding="2dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_corner_border"
            android:contentDescription="단어 이미지"
            android:scaleType="fitXY"
            android:src="@drawable/sample_image" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_white_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/speakerIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_corner_border"
            android:clickable="true"
            android:contentDescription="발음 듣기"
            android:scaleType="fitXY"
            android:src="@drawable/ic_speaker" />

        <TextView
            android:id="@+id/englishWord"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font"
            android:gravity="start"
            android:text="Appleabc"
            android:textColor="#1F8643"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/koreanMeaning"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/font"
            android:gravity="start"
            android:text="사과사과"
            android:textColor="#8B302D"
            android:textSize="28sp" />
    </LinearLayout>

    <!-- 한글 뜻 -->


    <!-- 이전/다음 버튼 하단 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/prevButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/solid_button"
            android:fontFamily="@font/font"
            android:text="이전"
            android:textColor="#FFF9E1"
            android:textSize="16sp" />

        <android.widget.Button
            android:id="@+id/goToGameBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/solid_button"
            android:fontFamily="@font/font"
            android:text="게임하러 가기"
            android:textColor="#FFF9E1"
            android:textSize="16sp" />

        <android.widget.Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/solid_button"
            android:fontFamily="@font/font"
            android:text="다음"
            android:textColor="#FFF9E1"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 게임하러 가기 버튼 하단 중앙 배치 -->

</LinearLayout>


