<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFAE5">


    <!-- 이미지뷰 중앙 상단 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_corner_border"
        android:contentDescription="단어 이미지"
        android:scaleType="fitXY"
        android:src="@drawable/sample_image"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>


    <!-- 영단어와 스피커 아이콘 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/speakerIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="발음 듣기"
            android:src="@drawable/ic_speaker" />

        <TextView
            android:id="@+id/englishWord"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Appleabc"
            android:textColor="#1F8643"
            android:textSize="42sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/koreanMeaning"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="start"
            android:text="사과사과"
            android:textColor="#8B302D"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 한글 뜻 -->


    <!-- 이전/다음 버튼 하단 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">

        <android.widget.Button
            android:id="@+id/prevButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이전"
            android:layout_marginEnd="15dp"
            android:textColor="#FFF9E1"
            android:background="@drawable/solid_button"/>

        <android.widget.Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="다음"
            android:textColor="#FFF9E1"
            android:background="@drawable/solid_button"/>
    </LinearLayout>

    <!-- 게임하러 가기 버튼 하단 중앙 배치 -->
    <android.widget.Button
        android:id="@+id/goToGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:text="게임하러 가기"
        android:textColor="#FFF9E1"
        android:background="@drawable/solid_button" />
</LinearLayout>


